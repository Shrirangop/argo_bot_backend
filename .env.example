# Environment Variables for Argobot Backend

# ======================
# AI and ML Services
# ======================

# Google AI API Key for LLM and embeddings
GOOGLE_API_KEY=your_google_api_key_here

# Pinecone API Key for vector database
PINECONE_API_KEY=your_pinecone_api_key_here

# Pinecone Index Names
PINECONE_INDEX_NAME=argobot-knowledge-base
PINECONE_SQL_INDEX_NAME=sql-knowledge-base

# ======================
# Database Configuration
# ======================

# Main PostgreSQL Database
DATABASE_URL=postgresql://postgres_buoy:buoy_sih123@localhost:5432/database

# User Database (SQLite)
USER_DATABASE_URL=sqlite:///./user_data.db

# ======================
# Security Configuration
# ======================

# JWT Secret Key for authentication
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# API Key for internal services
VALID_API_KEY=your-internal-api-key

# ======================
# MCP Configuration
# ======================

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8001
MCP_TIMEOUT=30

# ======================
# SQL LLM Configuration
# ======================

# Maximum number of results to return from SQL queries
SQL_MAX_RESULTS=1000

# SQL query execution timeout (seconds)
SQL_QUERY_TIMEOUT=30

# Directory for CSV output files
CSV_OUTPUT_DIR=datasets

# ======================
# Application Configuration
# ======================

# Server Port
PORT=8000

# Document directory for file uploads
DOCUMENT_DIRECTORY=documents

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=argobot.log

# ======================
# Development/Production
# ======================

# Environment mode
ENVIRONMENT=development

# Debug mode
DEBUG=true
